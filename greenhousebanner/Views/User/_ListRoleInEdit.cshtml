@model IEnumerable<greenhousebanner.Models.Role>
@{
    int id = ViewBag.Id;
}
<select class="form-control" name="IdRole">
    @foreach (var item in Model)
    {
        if (item.Id == id)
        {
            <option selected value="@item.Id">@item.RoleName</option>
        }
        else
        {
            <option value="@item.Id">@item.RoleName</option>
        }

    }
</select>