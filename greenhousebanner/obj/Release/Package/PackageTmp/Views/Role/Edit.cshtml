@model greenhousebanner.Models.ViewModels.RoleViewModel
@{
    ViewBag.Title = "Chỉnh sửa quyền";
    Layout = "~/Views/Shared/_ManageUserLayout.cshtml";
}

<div class="row">
    <div class="col-md-4 col-md-offset-4">
        @using (Html.BeginForm("Edit", "Role", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)
            <div class="form-horizontal">
                <div class="form-group">
                    <label>Tên quyền:</label>
                    <input type="hidden" class="form-control" name="Id" value="@Model.Id">
                    <input type="text" class="form-control" name="RoleName" value="@Model.RoleName">
                    @Html.ValidationMessageFor(x => x.RoleName)
                </div>
                <button type="submit" class="btn btn-default">Sửa</button>
                <a href="@Url.Action("Index","Role")" class="btn btn-default">Thoát</a>
            </div>
        }


    </div>
</div>
