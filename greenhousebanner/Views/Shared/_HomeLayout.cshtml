<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Banner Slider</title>
    <!-- Skitter Styles -->

    <link href="~/Content/Home/skitter.styles.min.css" rel="stylesheet" />

    <!-- Skitter JS -->
    <script src="~/Scripts/Home/jquery-1.6.3.min.js"></script>
    <script src="~/Scripts/Home/jquery.easing.1.3.js"></script>
    <script src="~/Scripts/Home/jquery.skitter.min.js"></script>

    <!-- Init Skitter -->
    <script type="text/javascript" language="javascript">
        $(document).ready(function () {
            $('.box_skitter_large').skitter({
                theme: 'clean',
                numbers_align: 'center',
                progressbar: true,
                dots: true,
                preview: true
            });
        });
    </script>
    <style type="text/css">
        html, body {
            margin: 0;
            padding: 0;
        }

        body {
            overflow: hidden;
            border: none;
        }

        .box_skitter {
            height: 320px;
            position: relative;
            width: 1200px;
        }
    </style>
    <script src='https://www.google.com/recaptcha/api.js'></script>
</head>
<body>
    <div class="container">
        @RenderSection("js",required:false)
        @RenderBody()
        @RenderSection("advertsement", required: false)
    </div>
</body>
</html>
