@model greenhousebanner.Models.ViewModels.TitelBannerViewModel
@{
    ViewBag.Title = "Chỉnh sữa tên tiêu đề";
    Layout = "~/Views/Shared/_ManageUserLayout.cshtml";
}
<div class="row">
    <div class="col col-md-4 col-md-offset-4">
        @using (Html.BeginForm("Edit", "TitleBannerRight", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)
            <div class="form-horizontal">
                <div class="form-group">
                    <label>Tên tiêu đề:</label>
                    <input type="hidden" class="form-control" name="Id" value="@Model.Id">
                    <input type="text" class="form-control" name="Titel" value="@Model.Titel">
                    @Html.ValidationMessageFor(x => x.Titel)
                </div>
                <button type="submit" class="btn btn-default">Sửa</button>
                <a href="@Url.Action("Index")" class="btn btn-default">Thoát</a>
            </div>
        }


    </div>

</div>
