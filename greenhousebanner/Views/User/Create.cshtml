@model greenhousebanner.Models.ViewModels.RegisterUserViewModel
@{
    ViewBag.Title = "Tạo mới tài khoản";
    Layout = "~/Views/Shared/_ManageUserLayout.cshtml";
}

<div class="row">
    <div class="col-md-4 col-md-offset-4">
        @using (Html.BeginForm("Create", "User", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)
            <div class="form-horizontal">
                <div class="form-group">
                    <label>Họ tên:</label>
                    <input type="text" class="form-control" name="FullName">
                    @Html.ValidationMessageFor(x => x.FullName)
                </div>
                <div class="form-group">
                    <label>Email:</label>
                    <input type="text" class="form-control" name="Email">
                    @Html.ValidationMessageFor(x => x.Email)
                </div>
                <div class="form-group">
                    <label>Tên đăng nhập:</label>
                    <input type="text" class="form-control" name="Username">
                    @Html.ValidationMessageFor(x => x.Username)
                </div>
                <div class="form-group">
                    <label>Mật khẩu:</label>
                    <input type="password" class="form-control" name="Password">
                    @Html.ValidationMessageFor(x => x.Password)
                </div>
                <div class="form-group">
                    <label>Xác nhận lại mật khẩu Mật khẩu:</label>
                    <input type="password" class="form-control" name="ConfirmPassword">
                    @Html.ValidationMessageFor(x => x.ConfirmPassword)
                </div>
                <div class="form-group">
                    <label>Quyền:</label>
                    @Html.Action("GetAllRole")
                    @Html.ValidationMessageFor(x => x.IdRole)
                </div>
                <button type="submit" class="btn btn-default">Tạo mới</button>
                <a href="@Url.Action("Index","User")" class="btn btn-default ">Thoát</a>
            </div>
        }


    </div>
</div>
